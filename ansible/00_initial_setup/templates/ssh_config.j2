# Thinkube Cluster SSH Configuration
# Generated by Ansible on {{ ansible_date_time.date }}
# WARNING: DO NOT EDIT THE SECTION BETWEEN BEGIN-THINKUBE-CLUSTER and END-THINKUBE-CLUSTER markers

# BEGIN-THINKUBE-CLUSTER
{% for host in groups['baremetal'] %}
Host {{ host }}
  HostName {{ hostvars[host]['ansible_host'] }}
  User {{ ansible_user_id }}
  IdentityFile {{ ansible_user_dir }}/.ssh/{{ ssh_key_name }}
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null

{% endfor %}

# Default settings for all hosts (managed by Thinkube)
Host *
  ServerAliveInterval 60
  ServerAliveCountMax 30
# END-THINKUBE-CLUSTER