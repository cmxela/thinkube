{
  "name": "thinkube-installer",
  "version": "1.0.0",
  "description": "Professional installer for thinkube Kubernetes homelab platform",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron --no-sandbox . --dev",
    "build:linux-x64": "electron-builder --linux deb --x64",
    "build:linux-arm64": "electron-builder --linux deb --arm64",
    "build:all": "npm run build:linux-x64 && npm run build:linux-arm64"
  },
  "build": {
    "appId": "org.thinkube.installer",
    "productName": "thinkube Installer",
    "directories": {
      "output": "../dist"
    },
    "files": [
      "**/*",
      "../frontend/dist/**/*",
      "../backend/dist/**/*"
    ],
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "System",
      "maintainer": "thinkube Team",
      "icon": "../assets/icon.png"
    },
    "deb": {
      "depends": [
        "python3",
        "python3-pip",
        "ansible"
      ]
    }
  },
  "keywords": ["kubernetes", "homelab", "installer", "thinkube"],
  "author": "thinkube Team",
  "license": "Apache-2.0",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-log": "^5.0.3",
    "electron-store": "^8.1.0"
  }
}