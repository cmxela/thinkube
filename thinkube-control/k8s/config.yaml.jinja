apiVersion: v1
kind: ConfigMap
metadata:
  name: {{ namespace }}-config
  namespace: {{ namespace }}
data:
  # External URLs (for browser access)
  CONTROL_HOST: "{{ control_subdomain }}.{{ domain_name }}"
  AUTH_HOST: "{{ auth_subdomain }}.{{ domain_name }}"
  REGISTRY_HOST: "{{ registry_subdomain }}.{{ domain_name }}"
  
  # Realm configuration
  KEYCLOAK_REALM: "{{ keycloak_realm }}"
  
  # Internal service URLs
  KEYCLOAK_INTERNAL_URL: "http://keycloak.keycloak.svc.cluster.local:8080"
  REGISTRY_INTERNAL_URL: "harbor-core.registry.svc.cluster.local"